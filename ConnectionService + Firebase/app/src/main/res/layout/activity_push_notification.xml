<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context=".PushNotificationActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="end"
            android:layout_margin="16dp"
            android:id="@+id/more_btn"
            android:src="@drawable/ic_more_vert_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/title_tv"
            android:layout_marginLeft="16dp"
            android:textColor="@color/primaryTextColor"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:text="@string/push_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:hint="@string/enter_uid"
            android:id="@+id/uid_layout"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content"
            app:boxStrokeWidth="1dp"
            app:boxStrokeColor="@color/secondaryTextColor"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:background="@null"
                android:id="@+id/uid"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:id="@+id/reciever_type"
            android:layout_marginLeft="16dp"
            android:background="@drawable/curve_box"
            android:layout_marginRight="16dp"
            android:padding="16dp"
            android:layout_height="wrap_content">
            <RadioButton
                android:gravity="center"
                android:checked="true"
                android:padding="8dp"
                android:textColor="@color/primaryTextColor"
                android:background="@drawable/radiobuttonbackground"
                android:layout_weight="1"
                android:text="@string/to_user"
                android:button="@null"
                android:id="@+id/users"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RadioButton
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/to_group"
                android:button="@null"
                android:textColor="@color/primaryTextColor"
                android:padding="8dp"
                android:background="@drawable/radiobuttonbackground"
                android:id="@+id/groups"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RadioGroup>
        <LinearLayout
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/message_tv"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/enter_text_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="8dp"
                android:hint="@string/message"
                android:padding="16dp"
                android:id="@+id/message"
                android:background="@drawable/curve_box"
                android:backgroundTint="@color/message_bubble_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:text="Text Message"
                android:layout_marginLeft="16dp"
                android:id="@+id/text_message"
                android:layout_weight="1"
                app:cornerRadius="8dp"
                android:layout_marginRight="16dp"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:text="Media Message"
                android:layout_weight="1"
                android:id="@+id/media_message"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cornerRadius="8dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                app:cornerRadius="8dp"
                android:layout_weight="1"
                android:text="Audio Call"
                android:id="@+id/audio_call"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:text="Video Call"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cornerRadius="8dp"
                android:id="@+id/video_call"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:padding="16dp"
            android:text="Custom Message"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:id="@+id/custom_message"
            app:cornerRadius="8dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>